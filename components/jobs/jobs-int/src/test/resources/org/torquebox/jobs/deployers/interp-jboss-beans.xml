<?xml version="1.0" encoding="UTF-8"?>

<deployment xmlns="urn:jboss:bean-deployer:2.0">
	<bean name="jboss.ha:service=HASingletonDeployer,type=Barrier" class="java.lang.Object"></bean>
	<bean name="runtime-factory" class="org.torquebox.interp.core.RubyRuntimeFactoryImpl">
	  <property name="useJRubyHomeEnvVar">false</property>
	</bean>
	<bean name="runtime-pool" class="org.torquebox.interp.core.SharedRubyRuntimePool">
	  <constructor>
	    <parameter>
              <value-factory bean="runtime-factory" method="createInstance">
	        <parameter>test</parameter>
		</value-factory>
            </parameter>
	  </constructor>
	</bean>
</deployment>
